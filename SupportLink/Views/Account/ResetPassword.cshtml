@model SupportLink.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BestLife</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: #FFFAFA;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', sans-serif;
            padding: 20px;
        }

        .register-card {
            background-color: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(12px);
            border-radius: 16px;
            padding: 30px;
            width: 100%;
            max-width: 420px; /* ✅ reduced for compact form */
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        }

        .form-title {
            font-weight: 600;
            font-size: 24px;
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .logo-img {
            display: block;
            margin: 0 auto 20px;
            width: 70px; /* ✅ slightly smaller */
            height: 70px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #fff;
        }

        .text-danger {
            font-size: 0.875rem;
        }

        .dob-error {
            display: none;
            color: #dc3545;
            font-size: 0.875rem;
        }

        .form-label {
            font-weight: 600;
        }

        .btn {
            width: 100%; /* ✅ full width button */
            font-weight: 600;
        }
    </style>

</head>
<body>
    <div class="register-card">
        <img src="~/images/Amtech.png" alt="Amtech" class="logo-img" />
        <h2 class="mb-4 text-primary form-title">Reset Password</h2>

        <form asp-action="ResetPassword" method="post" class="mt-4" id="ResetPasswordForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            
                <div class="form-group">
                    <label asp-for="NewPassword"></label>
                    <input asp-for="NewPassword" type="password" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            
                <button type="submit" class="btn btn-primary mt-3">Reset Password</button>
            </form>
        <p class="text-danger">@ViewBag.Message</p>
        <p>Already have an account? <a asp-action="Login" asp-controller="Account">Login</a></p>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("registerForm").addEventListener("submit", function (e) {
            const dobInput = document.getElementById("dobInput");
            const dobError = document.getElementById("dobError");
            const dobValue = new Date(dobInput.value);
            const today = new Date();
            const age = today.getFullYear() - dobValue.getFullYear();
            const m = today.getMonth() - dobValue.getMonth();

            const isUnderage = (age < 18 || (age === 18 && m < 0));

            if (isUnderage) {
                e.preventDefault();
                dobError.style.display = "block";
                dobInput.classList.add("is-invalid");
            } else {
                dobError.style.display = "none";
                dobInput.classList.remove("is-invalid");
            }
        });
    </script>
</body>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}


