@model IEnumerable<SupportLink.Models.AccountUser>

@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-dark">
                        <i class="fas fa-users text-primary me-2"></i>
                        User Management
                    </h1>
                    <p class="text-muted mb-0">Manage system users and their roles</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>New User
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 text-dark">
                        <i class="fas fa-list me-2 text-primary"></i>
                        User List
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="border-0 px-4 py-3 text-uppercase small fw-bold text-muted">Username</th>
                                    <th class="border-0 px-4 py-3 text-uppercase small fw-bold text-muted">Email</th>
                                    <th class="border-0 px-4 py-3 text-uppercase small fw-bold text-muted">Role</th>
                                    <th class="border-0 px-4 py-3 text-uppercase small fw-bold text-muted">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr class="border-bottom">
                                            <td class="px-4 py-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                    <span class="fw-semibold text-dark">@item.UserName</span>
                                                </div>
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="text-muted">
                                                    <i class="fas fa-envelope me-1"></i>
                                                    @item.Email
                                                </span>
                                            </td>
                                            <td class="px-4 py-3">
                                                @{
                                                    var roleClass = item.Role switch
                                                    {
                                                        SupportLink.Models.UserRole.Admin => "bg-danger",
                                                        SupportLink.Models.UserRole.Agent => "bg-warning",
                                                        SupportLink.Models.UserRole.Staff => "bg-info",
                                                        _ => "bg-light"
                                                    };
                                                }
                                                <span class="badge @roleClass fs-6">@item.Role</span>
                                            </td>
                                            <td class="px-4 py-3">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@item.UserId" 
                                                       class="btn btn-sm btn-outline-primary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Details" asp-route-id="@item.UserId" 
                                                       class="btn btn-sm btn-outline-info" title="Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.UserId" 
                                                       class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-5">
                                            <div class="text-muted">
                                                <i class="fas fa-users fa-3x mb-3"></i>
                                                <p class="mb-0">No users found</p>
                                                <small>Create your first user to get started</small>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-sm {
        width: 32px;
        height: 32px;
        font-size: 14px;
    }
</style>
