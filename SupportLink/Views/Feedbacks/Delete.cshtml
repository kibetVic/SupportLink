@model SupportLink.Models.Feedback

@{
    ViewData["Title"] = "Delete Feedback";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0 text-danger">
                <i class="fas fa-comment-dots me-2"></i>
                Delete Feedback #@Model.Id
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-7">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Are you sure you want to delete this feedback? This action cannot be undone.
            </div>
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 text-dark"><i class="fas fa-info-circle me-2 text-primary"></i>Feedback Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Ticket Name</dt>
                        <dd class="col-sm-8">@(Model.Ticket?.TicketName ?? "N/A")</dd>

                        <dt class="col-sm-4">User</dt>
                        <dd class="col-sm-8">@(Model.User?.Email ?? "N/A")</dd>

                        <dt class="col-sm-4">Rating</dt>
                        <dd class="col-sm-8">@Model.Rating</dd>

                        <dt class="col-sm-4">Comments</dt>
                        <dd class="col-sm-8">@Model.Comments</dd>

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
