@model SupportLink.Models.Feedback

@{
    ViewData["Title"] = "Feedback Details";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="fas fa-comments text-primary me-2"></i>
                Feedback Details #@Model.Id
            </h1>
            <div class="d-flex gap-2">
                @* <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit me-2"></i>Edit
                </a> *@
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-7">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 text-dark"><i class="fas fa-info-circle me-2 text-primary"></i>Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Ticket Name</dt>
                        <dd class="col-sm-8">@(Model.Ticket?.TicketName ?? "N/A")</dd>

                        <dt class="col-sm-4">User</dt>
                        <dd class="col-sm-8">@(Model.User?.Email ?? "N/A")</dd>

                        <dt class="col-sm-4">Rating</dt>
                        <dd class="col-sm-8">@Model.Rating</dd>

                        <dt class="col-sm-4">Comments</dt>
                        <dd class="col-sm-8">@Model.Comments</dd>

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
