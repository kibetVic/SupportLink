@model IEnumerable<SupportLink.Models.Feedback>

@{
    ViewData["Title"] = "Index";
}

<style>
    .table tr {
        font-size: 12px;
    }
</style>

<h2>Feedback List</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <input type="text" id="memberSearch" class="form-control w-50" placeholder="🔍 Search members by name, phone, or email..." />
    @* <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-user-plus"></i> New Feedack
    </a>  *@
    @if (!User.IsInRole("Staff"))
    {
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> New Feedack
        </a>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ticket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket.TicketName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Details">
                        View feedback
                    </a>
                    @if (!User.IsInRole("Staff"))
                    {
                        <a asp-action="Details" asp-controller="SupportTickets" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Edit">
                            View ticket
                        </a>
                    }
                    @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Edit">
                        Edit
                    </a> *@
                    @* <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                        Delete
                    </a> *@
            </tr>
        }
    </tbody>
</table>

<script>
    document.getElementById('memberSearch').addEventListener('input', function () {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('.table tbody tr');

        rows.forEach(row => {
            const rowText = row.innerText.toLowerCase();
            row.style.display = rowText.includes(searchTerm) ? '' : 'none';
        });
    });
</script>
