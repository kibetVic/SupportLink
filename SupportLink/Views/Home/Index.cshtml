@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Welcome, @ViewBag.UserName 👋</h4>
                </div>
                <div class="card-body text-center">
                    <p class="lead">
                        You are logged in as:
                        <span class="badge bg-info">@ViewBag.Role</span>
                    </p>

                    <hr />

                    <div class="d-flex justify-content-center gap-3">
                        <a href="/SupportTicket" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-ticket"></i> Manage Tickets
                        </a>
                        <a href="/Account/Logout" class="btn btn-danger btn-lg">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons (optional for icons) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
