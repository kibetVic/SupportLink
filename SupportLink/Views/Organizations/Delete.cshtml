@model SupportLink.Models.Organization

@{
    ViewData["Title"] = "Delete Organization";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0 text-danger">
                <i class="fas fa-building me-2"></i>
                Delete Organization #@Model.Id
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-7">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Are you sure you want to delete this organization? This action cannot be undone.
            </div>
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 text-dark"><i class="fas fa-id-card me-2 text-primary"></i>Organization Summary</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Code</dt>
                        <dd class="col-sm-8">@Model.OrganizationCode</dd>

                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.OrganizationName</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
