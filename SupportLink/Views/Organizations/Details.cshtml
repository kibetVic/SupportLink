@model SupportLink.Models.Organization

@{
    ViewData["Title"] = "Organization Details";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="fas fa-building text-primary me-2"></i>
                Organization Details #@Model.Id
            </h1>
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit me-2"></i>Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-7">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 text-dark"><i class="fas fa-id-card me-2 text-primary"></i>Overview</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Code</dt>
                        <dd class="col-sm-8">@Model.OrganizationCode</dd>

                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.OrganizationName</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
