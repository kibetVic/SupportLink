@model SupportLink.Models.SupportTicket

@{
    ViewData["Title"] = "Create Support Ticket";
}

<h4>Create Support Ticket</h4>
<hr />

<!-- TempData Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Created By -->
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
                    <option value="">-- Select User --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <!-- Organization -->
            <div class="form-group">
                <label asp-for="OrganizationId" class="control-label"></label>
                <select asp-for="OrganizationId" class="form-control" asp-items="ViewBag.Organizations">
                    <option value="">-- Select Organization --</option>
                </select>
                <span asp-validation-for="OrganizationId" class="text-danger"></span>
            </div>

            <!-- Category -->
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Status -->
            <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class="form-control" asp-items="ViewBag.Statuses">
                    <option value="">-- Select Status --</option>
                </select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>

            <!-- Assigned Agent -->
            <div class="form-group">
                <label asp-for="AssignedAgentId" class="control-label"></label>
                <select asp-for="AssignedAgentId" class="form-control" asp-items="ViewBag.AssignedAgentId">
                    <option value="">-- Select Agent (Optional) --</option>
                </select>
                <span asp-validation-for="AssignedAgentId" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- File Type -->
            <div class="form-group">
                <label asp-for="FileTypeId" class="control-label"></label>
                <select asp-for="FileTypeId" class="form-control" asp-items="ViewBag.FileTypes">
                    <option value="">-- Auto-detect from file --</option>
                </select>
                <span asp-validation-for="FileTypeId" class="text-danger"></span>
            </div>

            <!-- File Upload -->
            <div class="form-group">
                <label asp-for="FileUpload" class="control-label">Upload File</label>
                <input asp-for="FileUpload" type="file" class="form-control" />
                <span asp-validation-for="FileUpload" class="text-danger"></span>
            </div>

            <!-- Created & Resolved Dates -->
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control" type="datetime-local" value="@DateTime.UtcNow.ToString("yyyy-MM-ddTHH:mm")" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ResolvedAt" class="control-label"></label>
                <input asp-for="ResolvedAt" class="form-control" type="datetime-local" />
                <span asp-validation-for="ResolvedAt" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
