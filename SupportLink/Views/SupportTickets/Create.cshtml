@model SupportLink.Models.SupportTicket

@{
    ViewData["Title"] = "Create Support Ticket";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-dark">
                        <i class="fas fa-plus-circle text-primary me-2"></i>
                        Create Support Ticket
                    </h1>
                    <p class="text-muted mb-0">Submit a new support request</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- TempData Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Form Section -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 text-dark">
                        <i class="fas fa-ticket-alt me-2 text-primary"></i>
                        Ticket Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <!-- TicketName -->
                            <div class="col-6">
                                <div class="form-floating">
                                    <input asp-for="TicketName" class="form-control" />
                                    <label asp-for="TicketName" class="form-label">Ticket Name</label>
                                    <span asp-validation-for="TicketName" class="text-danger small"></span>
                                </div>
                            </div>

                            @* <!-- Organization -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="OrganizationId" class="form-select" asp-items="ViewBag.Organizations">
                                        <option value="">-- Select Organization --</option>
                                    </select>
                                    <label asp-for="OrganizationId" class="form-label">Organization</label>
                                    <span asp-validation-for="OrganizationId" class="text-danger small"></span>
                                </div>
                            </div> *@

                            <div class="col-md-6">
    <div class="form-floating">
        @if (User.IsInRole("Staff"))
        {
            <!-- Staff: show organization as readonly -->
            <input class="form-control" type="text" 
                   value="@ViewBag.StaffOrganizationName" readonly />
            <input type="hidden" asp-for="OrganizationId" 
                   value="@ViewBag.StaffOrganizationId" />
        }
        else
        {
            <!-- Other roles: can select organization -->
            <select asp-for="OrganizationId" class="form-select" asp-items="ViewBag.Organizations">
                <option value="">-- Select Organization --</option>
            </select>
        }
        <label asp-for="OrganizationId" class="form-label">Organization</label>
        <span asp-validation-for="OrganizationId" class="text-danger small"></span>
    </div>
</div>

                            <!-- Category -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                        <option value="">-- Select Issue Category --</option>
                                    </select>
                                    <label asp-for="CategoryId" class="form-label">Issue</label>
                                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Assigned Agent -->
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <select asp-for="AssignedId" class="form-select" asp-items="ViewBag.AssignedAgentId">
                                            <option value="">-- Select Agent (Optional) --</option>
                                        </select>
                                        <label asp-for="AssignedId" class="form-label">Assigned Agent</label>
                                        <span asp-validation-for="AssignedId" class="text-danger small"></span>
                                    </div>
                                </div>
                            }                            

                            <!-- File Type -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="FileTypeId" class="form-select" asp-items="ViewBag.FileTypes">
                                        <option value="">-- Auto-detect from file --</option>
                                    </select>
                                    <label asp-for="FileTypeId" class="form-label">File Type</label>
                                    <span asp-validation-for="FileTypeId" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- File Upload -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="FileUpload" type="file" class="form-control" id="fileUpload" />
                                    <label asp-for="FileUpload" class="form-label">Upload File</label>
                                    <span asp-validation-for="FileUpload" class="text-danger small"></span>
                                </div>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Supported formats: PDF, DOC, DOCX, Images, etc.
                                </div>
                            </div>

                            <!-- Description -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Description" class="form-control" rows="4" style="height: 120px;"></textarea>
                                    <label asp-for="Description" class="form-label">Description</label>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                </div>
                            </div>

                            @if (User.IsInRole("Admin"))
                            {
                            <!-- Resolved At -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="ResolvedAt" class="form-control" type="datetime-local" />
                                    <label asp-for="ResolvedAt" class="form-label">Resolved At (Optional)</label>
                                    <span asp-validation-for="ResolvedAt" class="text-danger small"></span>
                                </div>
                            </div>                              
                            }

                        <!-- Action Buttons -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-2"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-save me-2"></i>Create Ticket
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
