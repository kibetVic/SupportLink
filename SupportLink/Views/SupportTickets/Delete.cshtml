@model SupportLink.Models.SupportTicket

@{
	ViewData["Title"] = "Delete Ticket";
}

<div class="container-fluid">
	<div class="row mb-4">
		<div class="col-12 d-flex justify-content-between align-items-center">
			<h1 class="h3 mb-0 text-danger">
				<i class="fas fa-trash-alt me-2"></i>
				Delete Ticket 
			</h1>
			<a asp-action="Index" class="btn btn-outline-secondary">
				<i class="fas fa-arrow-left me-2"></i>Back to List
			</a>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-8">
			<div class="alert alert-warning">
				<i class="fas fa-exclamation-triangle me-2"></i>
				Are you sure you want to delete this ticket? This action cannot be undone.
			</div>
			<div class="card shadow-sm border-0 mb-3">
				<div class="card-header bg-white border-bottom">
					<h5 class="mb-0 text-dark"><i class="fas fa-ticket-alt me-2 text-primary"></i>Ticket Summary</h5>
				</div>
				<div class="card-body">
					<dl class="row mb-0">
						<dt class="col-sm-4">TicketName</dt>
						<dd class="col-sm-8">@Model.TicketName</dd>

						<dt class="col-sm-4">Created By</dt>
						<dd class="col-sm-8">@(Model.AccountUser?.Email ?? "N/A")</dd>

						<dt class="col-sm-4">Organization</dt>
						<dd class="col-sm-8">@(Model.Organization?.OrganizationName ?? Model.Organization?.OrganizationCode ?? "N/A")</dd>

						<dt class="col-sm-4">Category</dt>
						<dd class="col-sm-8">@(Model.IssueCategory?.Name ?? "N/A")</dd>

						<dt class="col-sm-4">Status</dt>
						<dd class="col-sm-8">@(Model.Status?.Name ?? "N/A")</dd>

						<dt class="col-sm-4">Assigned Agent</dt>
						<dd class="col-sm-8">@(Model.AssignedAgent?.Email ?? "N/A")</dd>

						<dt class="col-sm-4">Description</dt>
						<dd class="col-sm-8">@Model.Description</dd>
					</dl>
				</div>
			</div>

			<form asp-action="Delete">
				<input type="hidden" asp-for="SupportId" />
				<div class="d-flex justify-content-end gap-2">
					<a asp-action="Index" class="btn btn-outline-secondary">
						<i class="fas fa-times me-2"></i>Cancel
					</a>
					<button type="submit" class="btn btn-danger">
						<i class="fas fa-trash me-2"></i>Delete
					</button>
				</div>
			</form>
		</div>
	</div>
</div>
