@model SupportLink.Models.SupportTicket

@{
	ViewData["Title"] = "Ticket Details";
}

<div class="container-fluid">
	<div class="row mb-4">
		<div class="col-12 d-flex justify-content-between align-items-center">
			<h1 class="h3 mb-0">
				<i class="fas fa-info-circle text-primary me-2"></i>
				Ticket Details 
			</h1>
			<div class="d-flex gap-2">
				<a asp-action="Index" asp-controller="Feedbacks" asp-route-id="@Model.SupportId" class="btn btn-primary">
					<i class="fas fa-arrow-left me-2"></i>Back to feedback
				</a>
				<a asp-action="Index" class="btn btn-outline-secondary">
					<i class="fas fa-arrow-left me-2"></i>Back to suportTicket
				</a>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-8">
			<div class="card shadow-sm border-0 mb-3">
				<div class="card-header bg-white border-bottom">
					<h5 class="mb-0 text-dark"><i class="fas fa-ticket-alt me-2 text-primary"></i>Ticket Information</h5>
				</div>
				<div class="card-body">
					<dl class="row mb-0">
						<dt class="col-sm-4">Created By</dt>
						<dd class="col-sm-8">@(Model.AccountUser?.Email ?? "N/A")</dd>

						<dt class="col-sm-4">TicketName</dt>
						<dd class="col-sm-8">@Model.TicketName</dd>

						<dt class="col-sm-4">Organization</dt>
						<dd class="col-sm-8">@(Model.Organization?.OrganizationName ?? Model.Organization?.OrganizationCode ?? "N/A")</dd>

						<dt class="col-sm-4">Category</dt>
						<dd class="col-sm-8">@(Model.IssueCategory?.Name ?? "N/A")</dd>

						<dt class="col-sm-4">Status</dt>
						<dd class="col-sm-8">@(Model.Status?.Name ?? "N/A")</dd>

						<dt class="col-sm-4">Assigned Agent</dt>
						<dd class="col-sm-8">@(Model.AssignedAgent?.Email ?? "N/A")</dd>

						<dt class="col-sm-4">Description</dt>
						<dd class="col-sm-8">@Model.Description</dd>
					</dl>
				</div>
			</div>

			<div class="card shadow-sm border-0">
				<div class="card-header bg-white border-bottom">
					<h5 class="mb-0 text-dark"><i class="fas fa-paperclip me-2 text-primary"></i>Attachments & Dates</h5>
				</div>
				<div class="card-body">
					<dl class="row mb-0">
						<dt class="col-sm-4">Attachment</dt>
						<dd class="col-sm-8">
							@if (!string.IsNullOrEmpty(Model.UploadFile))
							{
								<a href="@Model.UploadFile" target="_blank" class="btn btn-sm btn-outline-primary">
									<i class="fas fa-file me-1"></i>@System.IO.Path.GetFileName(Model.UploadFile)
								</a>
							}
							else
							{
								<span class="text-muted">No attachment</span>
							}
						</dd>

						<dt class="col-sm-4">Created At</dt>
						<dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>

						<dt class="col-sm-4">Resolved At</dt>
						<dd class="col-sm-8">@(Model.ResolvedAt.HasValue ? Model.ResolvedAt.Value.ToString("MMM dd, yyyy HH:mm") : "-")</dd>
					</dl>
				</div>
			</div>
		</div>
	</div>
</div>
