@model IEnumerable<SupportLink.Models.SupportTicket>
@using System.IO

@{
    ViewData["Title"] = "Support Tickets";
}

<h2 class="mb-4">Support Tickets</h2>

<div class="row mb-3">
    <div class="col-md-6">
        <form method="get" class="d-flex" asp-action="Index">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control me-2" placeholder="Search by Organization, Category, Status, or Agent..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-success">+ New Ticket</a>
    </div>
</div>

<table class="table table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Organization</th>
            <th>Category</th>
            <th>Status</th>
            <th>Assigned Agent</th>
            <th>Description</th>
            <th>File</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
         @if (Model != null && Model.Any())
        {
            @foreach (var ticket in Model)
            {
                <tr>
                <td>@ticket.Organization?.OrganizationCode</td>
                <td>@ticket.IssueCategory?.Name</td>
                <td>@ticket.Status?.Name</td>
                <td>@ticket.AssignedAgent?.Email</td>
                <td>@ticket.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(ticket.UploadFile))
                    {
                        <a href="@ticket.UploadFile" target="_blank">@System.IO.Path.GetFileName(ticket.UploadFile)</a>
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ticket.SupportId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@ticket.SupportId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@ticket.SupportId" class="btn btn-sm btn-danger">Delete</a>
                </td>
                </tr>
            }
        }
        else
        {
        <tr>
            <td colspan="7" class="text-center text-muted">No tickets found.</td>
        </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        // Optional: Highlight search terms
        const urlParams = new URLSearchParams(window.location.search);
        const searchString = urlParams.get('searchString');
        if (searchString) {
            document.querySelectorAll('tbody td').forEach(td => {
                const regex = new RegExp(searchString, 'gi');
                td.innerHTML = td.textContent.replace(regex, match => `<mark>${match}</mark>`);
            });
        }
    </script>
}
