@model SupportLink.Models.TicketUpdate

@{
	ViewData["Title"] = "Delete Update";
}

<div class="container-fluid">
	<div class="row mb-4">
		<div class="col-12 d-flex justify-content-between align-items-center">
			<h1 class="h3 mb-0 text-danger">
				<i class="fas fa-trash-alt me-2"></i>
				Delete Update #@Model.Id
			</h1>
			<a asp-action="Index" class="btn btn-outline-secondary">
				<i class="fas fa-arrow-left me-2"></i>Back to List
			</a>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-8">
			<div class="alert alert-warning">
				<i class="fas fa-exclamation-triangle me-2"></i>
				Are you sure you want to delete this update? This action cannot be undone.
			</div>
			<div class="card shadow-sm border-0 mb-3">
				<div class="card-header bg-white border-bottom">
					<h5 class="mb-0 text-dark"><i class="fas fa-ticket-alt me-2 text-primary"></i>Update Summary</h5>
				</div>
				<div class="card-body">
					<dl class="row mb-0">
						<dt class="col-sm-4">Ticket Name</dt>
						<dd class="col-sm-8">@(Model.Ticket?.TicketName ?? "N/A")</dd>

						<dt class="col-sm-4">Updated By</dt>
						<dd class="col-sm-8">@(Model.UpdatedBy?.Email ?? "N/A")</dd>

						<dt class="col-sm-4">Status</dt>
						<dd class="col-sm-8">@Model.Status</dd>

						<dt class="col-sm-4">Updated At</dt>
						<dd class="col-sm-8">@Model.UpdatedAt.ToString("MMM dd, yyyy HH:mm")</dd>
					</dl>
				</div>
			</div>

			<form asp-action="Delete">
				<input type="hidden" asp-for="Id" />
				<div class="d-flex justify-content-end gap-2">
					<a asp-action="Index" class="btn btn-outline-secondary">
						<i class="fas fa-times me-2"></i>Cancel
					</a>
					<button type="submit" class="btn btn-danger">
						<i class="fas fa-trash me-2"></i>Delete
					</button>
				</div>
			</form>
		</div>
	</div>
</div>
