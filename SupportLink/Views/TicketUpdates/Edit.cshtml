@model SupportLink.Models.TicketUpdate

@{
	ViewData["Title"] = "Edit Update";
}

<div class="container-fluid">
	<div class="row mb-4">
		<div class="col-12 d-flex justify-content-between align-items-center">
			<h1 class="h3 mb-0">
				<i class="fas fa-edit text-primary me-2"></i>
				Edit Ticket Update #@Model.Id
			</h1>
			<a asp-action="Index" class="btn btn-outline-secondary">
				<i class="fas fa-arrow-left me-2"></i>Back to List
			</a>
		</div>
	</div>

	<div class="row justify-content-center">
		<div class="col-lg-7">
			<div class="card shadow-sm border-0">
				<div class="card-header bg-white border-bottom">
					<h5 class="mb-0 text-dark"><i class="fas fa-ticket-alt me-2 text-primary"></i>Update Information</h5>
				</div>
				<div class="card-body p-4">
					<form asp-action="Edit">
						<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
						<input type="hidden" asp-for="Id" />
						<input type="hidden" asp-for="UpdatedById" />

						<div class="row g-3">
							<div class="col-12">
								<div class="form-floating">
									<select asp-for="SupportId" class="form-select" asp-items="ViewBag.SupportId"></select>
									<label asp-for="SupportId" class="form-label">Ticket Name</label>
									<span asp-validation-for="SupportId" class="text-danger small"></span>
								</div>
							</div>

							<div class="col-md-6">
								<div class="form-floating">
									<select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<SupportLink.Models.UpdateStatus>()"></select>
									<label asp-for="Status" class="form-label">Status</label>
									<span asp-validation-for="Status" class="text-danger small"></span>
								</div>
							</div>

							<div class="col-md-6">
								<div class="form-floating">
									<input asp-for="UpdatedAt" class="form-control" />
									<label asp-for="UpdatedAt" class="form-label">Updated At</label>
									<span asp-validation-for="UpdatedAt" class="text-danger small"></span>
								</div>
							</div>
						</div>

						<div class="d-flex justify-content-end gap-2 mt-4">
							<a asp-action="Index" class="btn btn-outline-secondary">
								<i class="fas fa-times me-2"></i>Cancel
							</a>
							<button type="submit" class="btn btn-primary">
								<i class="fas fa-save me-2"></i>Save Changes
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

